<h2>User info</h2>
<div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <h3>name<%= @user.name %></h3>
  <h3>introduction<%= @user.introduction %></h3>
</div>
<% if @user == current_user %>
  <p><%= link_to "プロフ設定", edit_user_path(@user) %></p>
<% end %>

<h2>New book</h2>
  <%= form_with model: @book do |f| %>
    <h4>Title</h4>
      <%= f.text_field :title %>
    <h4>Opinion</h4>
      <%= f.text_area :body %><br />
    <%= f.submit 'Create Book' %>
  <% end %>

<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td>
        <%= image_tag @user.get_profile_image(80,80) %>
      </td>
      <td>
        <%= link_to book.title, book_path(book.id) %>
      </td>
      <td><%= book.body %></td>
    <% end %>
    </tr>
  </tbody>
</table>
