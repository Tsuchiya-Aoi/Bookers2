<h2>Book detail</h2>

<table class="table">
  <tbody>
    <tr>
      <td>
        <%= image_tag 'no_image.jpg' %>
      </td>
      <td><%= link_to @book.title %></td>
      <td><%= @book.body %></td>
      <td>
        <% if @book.user == current_user %>
          <%= link_to "Edit", edit_book_path(@book) %>
        <% end %>
      </td>
      <td>
        <% if @book.user == current_user %>
          <%= link_to "Destroy", book_path(@book), method: :delete, "data-confirm" => "本当に消しますか？" %>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>
